<%- include('./partials/header') %>
<%- include('./partials/sidenav') %>
  <!-- Main Content -->
  <main class="body-content">

    <div class="ms-content-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="ms-panel">
                  <div class="ms-panel-header">
                    <h6>All Products</h6>
                  </div>
                  
                  

                  <div class="ms-panel-body">
                    <div class="table-responsive">
                      <table class="table table-hover thead-primary">
                        <thead>
                          <tr>
                            <th scope="col">Product ID</th>
                            <!-- <th scope="col">Order Name</th> -->
                            <th scope="col">Name</th>
                            <th scope="col">Image</th>
                            <th scope="col">Price</th>
                            <th scope="col">Category</th>
                            <th scope="col">Availablity</th>
                            <th scope="col">Update</th>
                            <th scope="col">Delete</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% var index = 1 %>
                          <% for(u of all_products){ %> 
                            <tr>
                              <th scope="row"> <%= index %> </th>
                              <td> <%= u.name %> </td>
                              <td> <img src="<%= u.avatar %>" alt="<%= u.name %>"></td>
                              <td> <%= u.price%> </td>
                              <td> <%= u.category %>  </td>
                              <td> <%= u.isAvailable %>  </td>
                              <td> <a href="/admin/updateproduct/<%= u.id %>"  class="badge badge-primary"> Update </a>    </td>
                              <td> <a href="/admin/destroy/<%= u.id %>"  class="badge badge-primary"> Delete </a>   </td>
                            </tr>
                            <% index = index + 1 %>
                          <% }  %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>






                </div>
              </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    </main>


<%- include('./partials/footer') %>